<a href="/crate/<%= @user.id%>">Show Page</a>
<h3>Edit Your Profile</h3>
  <form action="/users/<%= @user.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>First Name:
		<input type="text" name="user[first_name]" value="<%= @user.first_name%>">
    </label>
	</p>
  <p>
    <label> Last Name:
      <input type="text" name="user[last_name]" value="<%= @user.last_name%>">
    </label>
  </p>
  <p>
    <label> Email:
      <input type="email" name="user[email]" value="<%= @user.email%>">
    </label>
  </p>
  <p>
    <label> Description:
      <textarea name="user[email]" placeholder="<%= @user.description%>" value="<%= @user.description%>"></textarea>
    </label>
  </p>

	<input type="submit" value="Update Records">

</form>
