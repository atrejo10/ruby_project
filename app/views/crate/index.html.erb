<h1>Crate</h1>

<header id="log_in">
  <img src="" alt="" />

  <% if flash[:shake] %>
  <script type="text/javascript">
      $(document).ready(function(){
        $("#login").effect("shake");
      });
  </script>
  <%end%>
  <form id="login" action="/sessions" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label >Email:
		<input type="email" name="email">
    </label>
	</p>
	<p>
		<label>Password:
		<input type="password" name="password">
    </label>
	</p>
	<p>
	<input type="submit" value="Log In">
</form>
</header>


<fieldset>
    <% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
      <p> <%= e %> </p>
    <% end %>
  <% end %>
<div id="register">
<form action="/users" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<h3>Sign Up</h3>

		<label>First Name:
		<input type="text" name="user[first_name]" placeholder="First Name">
    </label>


    <label> Last Name:
      <input type="text" name="user[last_name]" placeholder="Last Name">
    </label>

  <p>
    <label id="mail"> Email:
      <input id="email" type="email" name="user[email]" placeholder="Email">
    </label>
  </p>

<h4>*Password should be at least 8 characters</h4>
    <label>Password:
    <input type="password" name="user[password]" placeholder="Password">
    </label>


    <label>Password Confirmation
    <input type="password" name="user[password_confirmation]" id="Password Confirmation" placeholder="Confirm Password">
    </label>

  <p>
    <label>Description of yourself:
    </label>
  </p>

  <textarea name="user[description]" placeholder=" Do tell...."></textarea>
	<button>Sign up!</button>
</fieldset>
</form>
</div>
