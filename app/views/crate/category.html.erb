<div id="header">
	<h1><%= @category.category %></h1>
	<a href="/crate/show/">Go back</a>
</div>
<script type="text/javascript">

  $(document).ready(function(){
      $('.photo').on('click', function(){
        var id = $(this).attr("id");
        $.get('/crate/find/' + id, function(response)
        {
        	$("#formdiv").html(response);
        });
        $('#large').attr('src', $(this).attr('src'));
      })
  })


</script>
	<div id="sports">
		<% @photo.each do |photo|  %>
			<img id="<%= photo.id %>" class= "photo" src="<%= photo.avatar.url(:large)%>">
		<%end%>
	</div>

<% if @photo.first %>
	<div id="new_div">
		<h2 id="author"><%=@photo.first.user.first_name%> <%=@photo.first.user.last_name%></h2>
		<h2 id="title"><%=@photo.first.title%></h2>
		<p id="description"><%=@photo.first.description%></p>
		<img id="large" src="<%=@photo.first.avatar.url(:large)%>">
		<p id="photo_id"><%=@photo.first.id%>	</p>
		<%end%>
<div id="formdiv">
</div>
</div>
